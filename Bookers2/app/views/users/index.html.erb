<% if flash[:notice] %>
<p><%= flash[:notice] %></p>
<% end %>

<div class="container">
	<div class="row">
		<div class="col-xs-3">
				<div class="profile-container">
				<h2>User info</h2>
                	<%= attachment_image_tag @user, :profile_image, size:'60x60', format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
                	<table class="table">
                		<tbody>
                          <tr>
                          	<th>name</th><th><%= @user.name %></th>
                          </tr>
                          <tr>
                          	<th>introduction</th><th><%= @user.introduction %></th>
                          </tr>
                        </tbody>
                    </table>
                     <% if @user.id == current_user.id %>
                     <p>
                       <%= link_to edit_user_path(@user), class: 'btn btn-default' do %>
                        <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
                      <% end %>
                     </p>
                     <% end %>
              </div>
              
           <h2>New book</h2>

            <%= form_for(@book) do |f| %>

	         <h4>Title</h4>
	         <%= f.text_field :title %>
             <h4>Opinion</h4>
	         <%= f.text_area :body %>
	         <div class="submit">
	         <%= f.submit 'Create Book', class: "btn btn-primary" %>
             </div>
            <% end %>
        
         
        </div>
        <div class="col-xs-9">
            <h2>Users</h2>
             <table class="table">
	          <thead>
		        <tr>
			     <th>image</th>
			     <th>name</th>
		        </tr>
	          </thead>
	         <tbody>
		        <% @users.each do |user| %>
		          <tr>
			        <td><%= attachment_image_tag user, :profile_image, size:'60x60', format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
			        <td><%= user.name %></td>
			        <td><%= link_to "Show", user_path(user.id) %></td>
		          </tr>
		        <% end %>
	         </tbody>
           </table>
       </div>
   </div>
</div>