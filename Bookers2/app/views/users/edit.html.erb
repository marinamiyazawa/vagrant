<h2>User info</h2>
<%= form_for(@user) do |f| %>
   <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= @user.errors.count %>error occurred.</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      </ul>
      <% end %>
    </div>
    <% end %> 

    <h4>Name</h4>
    <%= f.text_field :name %>
    <h4>Image</h4>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
    <h4>Introduction</h4>
    <%= f.text_area :introduction %>
    <div class="submit">
    <%= f.submit 'Update User' %>
    </div>
<% end %>