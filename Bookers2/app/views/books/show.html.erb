<% if flash[:notice] %>
<p><%= flash[:notice] %></p>
<% end %>

<div class ="container">
	<div class="row">
		<div class="col-xs-3">
				<div class="profile-container">
					<h2>User info</h2>
					<%= attachment_image_tag @book1.user, :profile_image, size:'60x60', format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
                   <table class="table">
                		<tbody>
                          <tr>
                          	<th>name</th><th><%= @book1.user.name %></th>
                          </tr>
                          <tr>
                          	<th>introduction</th><th><%= @book1.user.introduction %></th>
                          </tr>
                        </tbody>
                    </table>
                     <% if @book1.user.id == current_user.id %>
                     <p>
                     	<%= link_to edit_user_path(@user), class: 'btn btn-default' do %>
                        <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
                     	<% end %>
                     </p>
                     <% end %>
                </div>
                
			<h2>New book</h2>

            <%= form_for(@book) do |f| %>

	         <h4>Title</h4>
	         <%= f.text_field :title %>
             <h4>Opinion</h4>
	         <%= f.text_area :body %>
	         <div class="submit">
	         <%= f.submit 'Create Book', class: "btn btn-primary" %>
             </div>
            <% end %>
		</div>

		<div class="col-xs-9">
           <h2>Book detail</h2>
             <table class="table">
	           <tbody>
		         <tr>
			       <th><%= attachment_image_tag @book1.user, :profile_image, size:'60x60', fallback: "no_image.jpg", class: "img-circle" %>
			       	<%= link_to user_path(@book1.user.id) do %>
			       	<%= @book1.user.name %>
			       	<% end %>
			       </th>
			       <th><%= @book1.title %></th>
			       <th><%= @book1.body %></th>
			       <% if @book1.user == current_user %>
			       <th><%= link_to "Edit", edit_book_path(@book1), class: "btn btn-success" %></th>
			       <th><%= link_to "Destroy", book_path(@book1), method: :delete, data: {confirm: '本当に消しますか？'}, class: "btn btn-danger" %></th>
			       <% end %>
		         </tr>
	           </tbody>
            </table>
        </div>
    </div>
</div>
