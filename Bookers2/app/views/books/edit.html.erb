<% if flash[:notice] %>
<p><%= flash[:notice] %></p>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
            <div class="edit">

             <h2>Editing Book</h2>

               <%= form_for(@book) do |f| %>
                 <h4>Title</h4>
               <%= f.text_field :title %>
                 <h4>Opinion</h4>
               <%= f.text_area :body %>
                 <div class="submit">
               <%= f.submit 'Update Book', class: "btn btn-primary" %>
                 </div>
               <% end %>
               <%= link_to "Show", book_path %>
               <%= link_to "Back", books_path %>
             </div>
           </div>
         </div>
       </div>
       