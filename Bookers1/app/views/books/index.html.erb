<% if flash[:notice] %>
<p><%= flash[:notice] %></p>
<% end %>
<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th> Body</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
		<td><%= link_to 'Show', book %></td>
		<td><%= link_to 'Edit', edit_book_path(book) %></td>
		<td><%= link_to 'Destroy', book_path(book), method: :delete, data: {confirm: 'Are you sure?' } %></td>

	</tr>
	<% end %>
</tbody>
</table>
	<h2>New book</h2>
<%= render 'layouts/error_messages', model: @book %>
<%= form_for(@book) do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<div class="submit">
<%= f.submit 'Create Book' %>
</div>


<% end %>
